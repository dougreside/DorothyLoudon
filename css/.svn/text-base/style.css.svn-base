/* Dorothy Loudon styles*/

/* general styles ----------- */
body {
	background:#f9e0ad;
	font-family: "Avant Garde", Avantgarde, "Century Gothic", CenturyGothic, "AppleGothic", sans-serif;
	font-size:100%;
	color:#4b3134;
}
.container {
	margin:30px 0 0 30px;
}
.spotlight {
	position:fixed;
	top:0;
	left:-200px;
	z-index:-10;
}

h1 {
	font-size:2em;
	color:#62101a;
}

h2 {
	font-size:1.3em;
	font-weight:bold;
	text-transform:uppercase;
	line-height:1em;
	color:#fff;
}
h3 {
	font-size:1.3em;
	margin-top:.7em;
	margin-bottom:.5em;
}
p {
	font-size:.8em;
	line-height:1.7em;
	margin-top:1.7em;
	color:#322423;
	letter-spacing:.1em;
}
strong {
	font-weight:bold;
}
/* logo ----------------------- */
.logo {
	margin-bottom:40px;
}
.logo h1 {
	background:url(../images/DorothyLoudonLogo.png) no-repeat;
	text-indent:-9999px;
	display:block;
	width:144px;
	height:115px;
	float:left;
	margin-bottom:0px;
	margin-left:-5px;
}

/* navigation ----------------- */
ul#nav  {
	display:block;
	height:80px;
	margin-top:25px;
	margin-bottom:50px;
}
#nav li {
	text-indent:-9999px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
	display:inline;
}
#nav li a {
	display:block;
	height:80px;
	text-decoration:none;
	position:relative;
}
#nav li a h2 {
	position:absolute;
	bottom:-3px;
}
#nav li.nav1{
	background:#62111a url(../images/nav1.png) no-repeat;
}
#nav li.nav1:hover, #nav li.nav1.active{
	background:#7b1f29 url(../images/nav1.png) no-repeat 0 -80px;
}
#nav li.nav2{
	background:#4B3134 url(../images/nav2.png) no-repeat;
}
#nav li.nav2:hover, #nav li.nav2.active{
	background:#624245 url(../images/nav2.png) no-repeat 0 -80px;
}
#nav li.nav3{
	background:#9c5a37 url(../images/nav3.png) no-repeat;
}
#nav li.nav3:hover, #nav li.nav3.active{
	background:#b06540 url(../images/nav3.png) no-repeat 0 -80px;
}
#nav li.nav4{
	background:#554c47 url(../images/nav4.png) no-repeat;
}
#nav li.nav4:hover, #nav li.nav4.active{
	background:#6a5e58 url(../images/nav4.png) no-repeat 0 -80px;
}
/* main styles ----------------- */
#main h3 {
	font-size:2em;
	color:#9c5a37;
	font-weight:bold;
	text-indent:-9999px;
	line-height:39px;
}
#home #main h3 { background:url(../images/welcome.png) no-repeat; }
#biography #main h3 { background:url(../images/biography.png) no-repeat; }
#works #main h3 { background:url(../images/majorworks.png) no-repeat; }
#guide #main h3 { background:url(../images/collectionguide.png) no-repeat; }
.title {
	padding:0;
	margin:0;
	font-style:italic;
	font-size:.6em;
	padding-left:10px;
	color:#9c5a37;
}
